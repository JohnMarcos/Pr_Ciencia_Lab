<div class="container mb-3">
  <h1 class="title mt-5 text-success font-weight-bold cl-text-shadow">Cursos</h1>
	<div class="container">
		<div class="row g-0 row-cols-3 justify-content-around">
			<% @courses.each do |c| %>
				<div class="col-12 col-md-6 col-lg-4">
					<div class="card rounded mt-3">
						<%= cl_image_tag(c.image.key, class: "card-img-top rounded") %>
						<div class="card-body">
							<h5 class="card-title"><%= c.name %></h5>
							<h6 class ="text-muted">Profesor: <%= c.user.first_name %> <%= c.user.last_name %></h6>
							<div class="text-right">
								<button class="btn btn-success" role="butto"><%= link_to "Ver Curso", course_path(c.id), class: "text-white" %></button>
							</div>
						</div>
					</div> 
				</div>
			<% end %>
	    </div>
	</div>
</div>