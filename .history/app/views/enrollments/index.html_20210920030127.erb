<h1>Mis Cursos</h1>
<h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
<% @enrollments.each do |e| %>
  <% course_enrollment = Course.find(e.course_id) %>
  <% enrollment_status = Enrollment.find_by(user_id: current_user.id, course_id: course_enrollment.id).nil? ? "No" : "Si" %>
  <% user = User.find(course_enrollment.user_id) %>
  <p>Nombre del curso: <%= course_enrollment.name %></p>
  <p>Descripci√≥n del curso: <%= course_enrollment.description %></p>
  <p>Profesor: <%= user.first_name %> <%= user.last_name %></p>
  <p>Enrollados: <%= @enrollments.count %></p>
  <p>Enrollado?: <%= enrollment_status %></p>
  <p>Lecciones: <%= course_enrollment.lessons.count %></p>
  <p>Comentarios: <%= course_enrollment.comments.count %></p>
<% end %>
